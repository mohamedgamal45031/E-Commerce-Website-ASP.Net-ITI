
@{
    ViewData["Title"] = "Cart";
}
@model List<Product>


	<div class="breadcrumbs">
		<div class="container">
			<ul>
				<li><a href="index.html">Home</a></li>


				<li><span>Your Shopping Cart</span></li>


			</ul>
		</div>
	</div>





	<div class="template_cart">
	@{
		decimal total = 0;
	}
		<div class="container">
			<h1 class="page_heading">Your Shopping Cart</h1>

			@if (Model.Count == 0)
			{
				<div class="cart_empty ">
					<p style="text-align:center;" class="alert alert-warning ">It appears that your cart is currently empty.</p>
				</div>
			}
			else
			{
			<div class="row product_listing__main layout__medium_sb" id="product_listing__sorted">
				
				@foreach (var product in Model)
				{
					<div class="col-sm-4 ">

						<div class="product_item">
							<div class="product_img">
								<a class="img_change"
								   href="teens-clothing/products/classic-fit-three-piece-check-suit.html">
									<img height="100%" width="100%" class="img__1" style="border-radius:15px"
										 src="~/Assets/Uploads/@product.Image"
										 alt="Classic Fit Three-Piece Check Suit">

									<img height="100%" width="100%" class="img__2" style="border-radius:15px"
										 src="~/Assets/Uploads/@product.Image2"
										 alt="Classic Fit Three-Piece Check Suit" />
								</a>
							</div>

							<div class="product_info">
								<p class="product_name">

									<a href="teens-clothing/products/classic-fit-three-piece-check-suit.html">
										@product.Name
									</a>

								</p>


								<p class="product_desc product_desc__short">
									@product.Description
								</p>
								<p class="product_desc product_desc__long">
									@product.Description
								</p>


								<div class="product_prop">
									<p class="product_price">
										@{total += @product.Price;}
										<span class="money">@product.Price EG</span>
									</p>

									<p class="product_color">
										<span class="color_options"
											  style="background-color: Gray;" title="Gray"></span><span class="color_options" style="background-color: Black;"
																										title="Black"></span><span class="color_options"
																																   style="background-color: Brown;" title="Brown"></span>
									</p>
								</div>

							
							</div>

							<div class="clearfix"></div>
						</div>

					</div>
				}




			</div>

			}
		



	</div>
	<div style="display:flex;justify-content:center;">
		<h1>Total Price is: @total EG</h1>
	</div>
	<br />
	<div style="display:flex;justify-content:center;"> 
		<a style="margin-right: 20px;" class="btn slider_btn" asp-route-Total="@total" asp-action="MakeOrder">
			Confirm Order
		</a>
	</div>
	
	
	</div>






